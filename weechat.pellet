{
  "name": "weechat",
  "desc": "The extensible chat client.",
  "deps": {
    "apt-get": [
      "cmake",
      "guile-2.0-libs",
      "libaspell15",
      "libc6",
      "libgc1c2",
      "libgcrypt20",
      "libgcrypt20-dev",
      "libgmp10",
      "libgnutls-deb0-28",
      "libgnutls28-dev",
      "liblua5.1-0",
      "libperl5.20",
      "libpython2.7",
      "libruby2.1",
      "libtcl8.5",
      "zlib1g"
    ],
    "brew": [],
    "pacman": [
      "aspell",
      "cmake",
      "curl",
      "gnutls",
      "guile",
      "libgcrypt",
      "lua",
      "ncurses",
      "perl",
      "python2",
      "ruby",
      "tcl",
      "zlib"
    ],
    "perl": [],
    "python2": [],
    "python3": [],
    "yum": [],
    "zipper": []
  },
  "vcs": "git",
  "repo": "https://github.com/weechat/weechat.git",
  "compile": [
    "mkdir build",
    "cd build",
    "cmake ..",
    "make"
  ],
  "install": [
    "cd build",
    "sudo make install"
  ],
  "remove": [
    "cd build",
    "sudo make uninstall"
  ]
}
